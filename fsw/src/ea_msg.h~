#include "cfe.h"

/* Example command packet command codes */
#define EA_NOOP_CC            0  /* no-op command */
#define EA_RESET_CC           1  /* reset counters */
#define EA_HELLOWORLD_CC      2  /* hello world command */

/* Type definition (generic "no arguments" command) */
typedef struct
{
    uint8                 CmdHeader[CFE_SB_CMD_HDR_SIZE];
} EA_NoArgsCmd_t;


/* Type definition (EA housekeeping) */
typedef struct
{
    uint8                 TlmHeader[CFE_SB_TLM_HDR_SIZE];

    /* Command interface counters */
    uint8                 CmdCounter;
    uint8                 ErrCounter;
} EA_HkPacket_t;
