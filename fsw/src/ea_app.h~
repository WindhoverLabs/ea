#ifndef _ea_app_
#define _ea_app_

#include "cfe.h"





/* Example command pipe parameters */
#define EA_PIPE_DEPTH         12 /* Depth of the Command Pipe for Application */

/* Example app specific definitions */
#define EA_SB_TIMEOUT         CFE_SB_PEND_FOREVER  /* Can be a value in milliseconds */
#define EA_SB_PIPE_1_NAME     "EA_CMD_PIPE"




/** 
 *  \brief Example global data structure
 */
typedef struct
{
    /* Command interface counters */
    uint8                 CmdCounter;
    uint8                 ErrCounter;

    /* Housekeeping telemetry packet */
    EA_HkPacket_t         HkPacket;

    /* Operational data (not reported in housekeeping) */
    CFE_SB_MsgPtr_t       MsgPtr;
    CFE_SB_PipeId_t       CmdPipe;

    /* Run Status variable used in the main processing loop */
    uint32                RunStatus;

    /* Initialization data (not reported in housekeeping) */
    char                  PipeName[16];
    uint16                PipeDepth;
} EA_AppData_t;


/**
 * \brief Application entry point and main process loop
 */
void EA_AppMain(void);


/**
 * \brief Example app initialization
 */
int32 EA_AppInit(void);


/**
 * \brief Process command pipe message
 */
void EA_AppPipe(CFE_SB_MsgPtr_t msg);


/* Exported Data */
extern EA_AppData_t     EA_AppData;

#endif /* _ea_app_ */

