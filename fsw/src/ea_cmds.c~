#include "ea_cmds.h"
#include "ea_app.h"

void EA_HousekeepingCmd(CFE_SB_MsgPtr_t msg)
{
    uint16 ExpectedLength = sizeof(EA_NoArgsCmd_t); 
    uint16 i;
    
    /* Verify command packet length */
    if (EA_VerifyCmdLength(msg, ExpectedLength))
    {
       /* Get command execution counters */
        EA_AppData.HkPacket.CmdCounter = EA_AppData.CmdCounter;
        EA_AppData.HkPacket.ErrCounter = EA_AppData.ErrCounter;
        
        CFE_EVS_SendEvent(EA_PROCCESS_INF_EID,CFE_EVS_INFORMATION, "EA: Hello Housekeeping!");
        
        /* Send housekeeping telemetry packet */
        CFE_SB_TimeStampMsg((CFE_SB_Msg_t *) &EA_AppData.HkPacket);
        CFE_SB_SendMsg((CFE_SB_Msg_t *) &EA_AppData.HkPacket);

        /* This command does not affect the command execution counter */
    }

    return;

} /* End of EA_HousekeepingCmd() */


void EA_NoopCmd(CFE_SB_MsgPtr_t msg)
{
    uint16 ExpectedLength = sizeof(EA_NoArgsCmd_t);

    /* Verify command packet length */
    if (EA_VerifyCmdLength(msg, ExpectedLength))
    {
        EA_AppData.CmdCounter++;

        CFE_EVS_SendEvent(EA_NOOP_INF_EID, CFE_EVS_INFORMATION, \
                         "No-op command");
    }

    return;

} /* End of EA_NoopCmd() */


void EA_ResetCmd(CFE_SB_MsgPtr_t msg)
{
    uint16 ExpectedLength = sizeof(EA_NoArgsCmd_t); 

    /* Verify command packet length */
    if (EA_VerifyCmdLength(msg, ExpectedLength))
    {
        EA_AppData.CmdCounter = 0;
        EA_AppData.ErrCounter = 0;

        CFE_EVS_SendEvent(EA_RESET_INF_EID, CFE_EVS_INFORMATION, \
                         "Reset Counters command received");
    }

    return;

} /* End of EA_ResetCmd() */


void EA_HelloWorldCmd(CFE_SB_MsgPtr_t msg)
{
    uint16 ExpectedLength = sizeof(EA_NoArgsCmd_t);

    /* Verify command packet length */
    if (EA_VerifyCmdLength(msg, ExpectedLength))
    {
        CFE_EVS_SendEvent(EA_PROCCESS_INF_EID,CFE_EVS_INFORMATION, "EA: Hello World!");
    }

    return;

} /* End of EA_HelloWorldCmd() */


boolean EA_VerifyCmdLength(CFE_SB_MsgPtr_t msg, uint16 ExpectedLength)
{
    boolean result = TRUE;
    uint16 ActualLength = CFE_SB_GetTotalMsgLength(msg);

    /* Verify the command packet length */
    if (ExpectedLength != ActualLength)
    {
        CFE_SB_MsgId_t MessageID = CFE_SB_GetMsgId(msg);
        uint16 CommandCode = CFE_SB_GetCmdCode(msg);

        CFE_EVS_SendEvent(EA_LEN_ERR_EID, CFE_EVS_ERROR, \
           "Invalid cmd pkt: ID = 0x%X,  CC = %d, Len = %d", \
                          MessageID, CommandCode, ActualLength);
        result = FALSE;
        EA_AppData.ErrCounter++;
    }

    return(result);

} /* End of EA_VerifyCmdLength() */
